<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frmBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_border_tv">

        <TextView
            android:id="@+id/tvPhotoEditorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/red_color_picker"
            android:textSize="18sp"
            tools:text="Input"
            tools:textColor="@android:color/holo_red_light" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imgPhotoEditorClose"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="top|start"
        android:elevation="1dp"
        android:src="@drawable/ic_cancel" />

</FrameLayout>
